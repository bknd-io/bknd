    "@mantine/notifications": "^7.17.1",
    "@playwright/test": "^1.56.1",
    "@rjsf/core": "5.22.2",
    "@rjsf/utils": "5.22.0",
    "@standard-schema/spec": "^1.0.0",
    "@tabler/icons-react": "3.35.0",
