  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./ui": {
      "types": "./dist/types/ui/index.d.ts",
      "import": "./dist/ui/index.js",
      "require": "./dist/ui/index.js"
    },
