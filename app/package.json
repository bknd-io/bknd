    "postcss-simple-vars": "^7.0.1",
    "postgres": "^3.4.7",
    "posthog-js-lite": "^3.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.66.0",
    "react-icons": "5.5.0",
    "react-json-view-lite": "^2.5.0",
    "sql-formatter": "^15.6.10",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "uuid": "^13.0.0",
