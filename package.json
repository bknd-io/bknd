{
  "name": "bknd",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "updater": "bun x npm-check-updates -ui",
    "ci": "find . -name 'node_modules' -type d -exec rm -rf {} + && bun install",
    "npm:local": "verdaccio --config verdaccio.yml",
    "format": "bunx biome format --write ./app",
    "lint": "bunx biome lint --changed ./app"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.3",
    "@tsconfig/strictest": "^2.0.7",
    "@types/lodash-es": "^4.17.12",
    "bun-types": "^1.1.18",
    "miniflare": "^3.20250718.2",
    "typescript": "^5.9.3",
    "verdaccio": "^6.2.1"
  },
  "engines": {
    "node": ">=22"
  },
  "workspaces": ["app", "packages/*"]
}
